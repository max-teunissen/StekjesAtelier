        <div class="card" style="width: 18rem; margin: 20px;">
          <%= image_tag(stekje.file, class:'card-img-top card-images-index', alt:'Card image cap',
              style:'height: 288px;')%>
          <div class="card-body">
            <h5 class="card-title"><%= stekje.name %></h5>
            <p class="card-text"><%= stekje.price %> â‚¬</p>
            <%= link_to 'Info', stekje_path(stekje.id), class:'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
  <%= link_to 'Terug', home_path, class:'btn btn-dark ' %>
</div>
